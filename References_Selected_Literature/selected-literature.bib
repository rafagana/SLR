   title = {ML-Based IDPS Enhancement With Complementary Features for Home IoT Networks},
   volume = {19},
   url = {https://www.ieee.org/publications/rights/index.html},
   year = {2022},
}
@article{10.1109/ICOIACT59844.2023.10455910,
   abstract = {The Internet of Things (IoT) is one of the networking concepts that is expanding the fastest and has a variety of applications. IoT has enabled various industries, such as smart electricity systems, intelligent traffic, and smart homes and buildings, to become more sophisticated in the real world. Several previously manual and resource-intensive operations can now be automated thanks to the IoT. However, techniques for detecting and preventing security breaches need to be developed and put into practice for the successful adoption of IoT in several businesses. Major IoT application domains are identified, vulnerabilities are analyzed, and techniques for reducing security risks are suggested in this research. This study uses a mixed-method approach, beginning with a thorough assessment of the literature to identify the most well-known applications for IoT across sectors like industrial, smart cities, healthcare, and smart homes. Current weaknesses related to IoT networks and devices are also examined. Researchers and manufacturers will be able to assess and restrict the vulnerability range on IoT devices with the aid of this study.},
   author = {Fabrice Yengayenga and Andi Wahju and Rahardjo Emanuel and Universitas Atma and Jaya Yogyakarta},
