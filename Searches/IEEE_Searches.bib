@inproceedings{Mougy2017,
   abstract = {Smart home markets are rapidly growing due to the convenience and comfort they bring to their users. However, smart home appliances are still largely heterogeneous, typically requiring their own applications to control them. This usually means that smart home control remains largely user-driven, making the coordination of heterogeneous devices challenging. Moreover, recent cyber-attacks have demonstrated the vulnerability of many of these devices. Therefore, this paper presents Xenia, a secure smart home platform for management and control of smart home devices. In Xenia, APIs are defined for controlling devices through a centralized server. In addition, the devices can be controlled through text or voice chatting in natural English language. An intelligent agent is developed to give this feature human-like traits. To ensure coordination, the server also implements a graph-based machine learning algorithm to automatically detect user patterns around the house, in order to improve coordination of heterogeneous devices. Finally, a comprehensive security architecture is implemented that provides authentication, access control, encryption, intrusion detection, and firewall services to all parts of the system. Experiments demonstrate the veracity of our system operation.},
   author = {Amr El Mougy and Ahmed Khalaf and Hazem El Agaty and Mariam Mazen and Noureldin Saleh and Mina Samir},
   doi = {10.1109/IINTEC.2017.8325912},
   booktitle = {2017 International Conference on Internet of Things, Embedded Systems and Communications (IINTEC)},
   keywords = {Smart homes;Servers;Home appliances;Security;Google;Pattern recognition;Androids;smart home;voice recognition;natural language processing;machine learning;security},
   month = {10},
   pages = {47-52},
   title = {Xenia: Secure and interoperable smart home system with user pattern recognition},
   year = {2017}
}
@inproceedings{Roux2017,
   abstract = {Nowadays, more and more Internet-of-Things (IoT) smart products, interconnected through various wireless communication technologies (Wifi, Bluetooth, Zigbee, Z-wave, etc.) are integrated in daily life, especially in homes, factories, cities, etc. Such IoT technologies have become very attractive with a large variety of new services offered to improve the quality of life of the endusers or to create new economic markets.However, the security of such connected objects is a real concern due to weak or flawed security designs, configuration errors or imperfect maintenance. Moreover, the vulnerabilities discovered in IoT products are often difficult to eliminate because, most of the time, they cannot be patched easily. Therefore, protection mechanisms are needed to mitigate the potential risks induced by such objects in private and public connected areas.In this paper, we propose a novel approach to detect potential attacks in smart places (e.g. smart homes) by detecting deviations from legitimate communication behavior, in particular at the physical layer. The proposed solution is based on the profiling and monitoring of the Radio Signal Strenght Indication (RSSI) associated to the wireless transmissions of the connected objects. A machine learning neural network algorithm is used to characterize legitimate communications and to identify suspiscious scenarios. We show the feasibility of this approach and discuss some possible application cases.},
