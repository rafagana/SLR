@article{Li2024,
   abstract = {Recent studies have demonstrated that malicious adversaries are capable of fingerprinting Internet of Things (IoT) devices in a smart home and further causing privacy breaches. However, many existing anti-fingerprinting schemes, either by traffic padding or traffic mutation, are less effective in defending against state-of-the-art fingerprinting methods. To meet this gap, we in this paper propose the HomeSentinel, an intelligent anti-fingerprinting scheme to counter IoT traffic fingerprinting in smart homes. Specifically, we first design a LightGBM-based IoT traffic extraction model to accurately distinguish IoT traffic from raw network traffic in a smart home without user operations. Second, we develop a dummy IoT traffic generation model to produce dummy IoT traffic in desired spatial-temporal patterns. Third, an IoT traffic mixing strategy is crafted to heuristically merge dummy IoT traffic with real IoT traffic in desired spatial-temporal patterns. Extensive experiments on three real-world datasets (i.e., two public and one custom) demonstrate that our proposed HomeSentinel scheme can effectively defend against state-of-the-art IoT traffic fingerprinting methods, and outperforms existing IoT traffic anti-fingerprinting schemes. Further, real-world experiments are conducted on a self-built testbed show that, reasonably low communication delays can be caused when implementing the HomeSentinel in smart homes.},
   author = {Beibei Li and Youtong Chen and Lei Zhang and Licheng Wang and Yanyu Cheng},
   doi = {10.1109/TIFS.2024.3382589},
   issn = {1556-6021},
   journal = {IEEE Transactions on Information Forensics and Security},
   keywords = {Internet of Things;Fingerprint recognition;Smart homes;Object recognition;Telecommunication traffic;Mathematical models;Delays;Smart homes;Internet of Things (IoT);privacy preservation;IoT traffic fingerprinting;anti-fingerprinting},
   month = {6},
   pages = {4780-4793},
   title = {HomeSentinel: Intelligent Anti-Fingerprinting for IoT Traffic in Smart Homes},
   volume = {19},
   year = {2024}
}
@inproceedings{Khan2024,
   abstract = {Smart home technologies automate regular operations like temperatures and lighting reacting to voice commands, making life easier. Smartphones allow homeowners to remotely operate these devices and monitor and manage their homes in real time. Smart home devices use IoT to make life smarter, more effective, and more customized. Smart home IoT devices may be hacked to access security cameras and personal data. Attackers might manipulate smart locks or thermostats, threatening people and their property. These IoT devices are networked, making strong cybersecurity necessary to guard against emerging threats. Early cybersecurity identification enables quick reaction and remediation, limiting damage and averting attack escalation. Early detection of security breaches allows proactive actions to stop unwanted access, limit the effect, and protect critical data. It dramatically minimizes the window of vulnerability, improving cybersecurity resilience and safeguarding systems from protracted exploitation or criminal activity. This research improves smart home security by training Aposemat IoT-23 dataset. XGBoost, Simple Neural Network, GaussianNB and Logistic Regression are evaluated to identify and prevent harmful data injection and illegal access. The results show they protect smart home networks with over 99% accuracy. Smart home IoT device protection is excellent with machine learning techniques like XGBoost and Simple Neural Network. These algorithms identify and block unwanted access and harmful data injection.},
