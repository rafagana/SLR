@article{Illy2022,
   abstract = {The Internet of Things (IoT) networks are obstructed by security vulnerabilities that hackers can leverage to operate intrusions in many environments, such as smart homes, smart factories, and smart healthcare systems. To overcome this obstruction, researchers have come up with different intrusion detection and prevention systems (IDPSs). Out of all the implemented technologies, Machine Learning (ML) has emerged as the most promising approach. Therefore, to improve the detection accuracy, most ML-based intrusion detection solutions focus only on investigating appropriate ML algorithms. Yet, the limitations in terms of detection accuracy in various attacks are often caused by lack of appropriate detection features. Moreover, the majority of the previous works lack intrusion prevention mechanisms and deployment architectures. Thus, in this research, we study the properties of different smart home security attacks and the quality of the features that can be brought out and employed in ML algorithms to detect each of these attacks efficiently. Furthermore, this research proposes effective intrusion prevention mechanisms and a Software-Defined Networking (SDN) based deployment architecture of the IDPSs within home networks. Experimental evaluations of the proposed solution are provided using different feature sets and various ML models. The contributions and advancements discussed in this paper will upgrade future research and engineering works on IDPSs for IoT. Index Terms-Feature selection, Internet of Things (IoT), intrusion detection system (IDS), intrusion prevention system (IPS), machine learning (ML), network security, smart home, software-defined networking (SDN), and wireless network security.},
   author = {Poulmanogo Illy and Georges Kaddoum and Kuljeet Kaur and Sahil Garg},
   doi = {10.1109/TNSM.2022.3141942},
   issue = {2},
   journal = {IEEE TRANSACTIONS ON NETWORK AND SERVICE MANAGEMENT},
   title = {ML-Based IDPS Enhancement With Complementary Features for Home IoT Networks},
   volume = {19},
   url = {https://www.ieee.org/publications/rights/index.html},
   year = {2022}
}
@article{,
   abstract = {The Internet of Things (IoT) is one of the networking concepts that is expanding the fastest and has a variety of applications. IoT has enabled various industries, such as smart electricity systems, intelligent traffic, and smart homes and buildings, to become more sophisticated in the real world. Several previously manual and resource-intensive operations can now be automated thanks to the IoT. However, techniques for detecting and preventing security breaches need to be developed and put into practice for the successful adoption of IoT in several businesses. Major IoT application domains are identified, vulnerabilities are analyzed, and techniques for reducing security risks are suggested in this research. This study uses a mixed-method approach, beginning with a thorough assessment of the literature to identify the most well-known applications for IoT across sectors like industrial, smart cities, healthcare, and smart homes. Current weaknesses related to IoT networks and devices are also examined. Researchers and manufacturers will be able to assess and restrict the vulnerability range on IoT devices with the aid of this study.},
   author = {Fabrice Yengayenga and Andi Wahju and Rahardjo Emanuel and Universitas Atma and Jaya Yogyakarta},
   doi = {10.1109/ICOIACT59844.2023.10455910},
   isbn = {9798350315639},
   keywords = {Automation,IoT applications,IoT security and privacy,The Internet of Things},
