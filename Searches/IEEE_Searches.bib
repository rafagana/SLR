   keywords = {Logic gates;Feature extraction;Internet of Things;Object recognition;Performance evaluation;Fingerprint recognition;Security;Fingerprint;identification;IoT;network;network function virtualization (NFV);security},
   month = {2},
   pages = {940-952},
   title = {DEFT: A Distributed IoT Fingerprinting Technique},
   volume = {6},
   year = {2019}
}
